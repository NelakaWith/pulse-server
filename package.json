{
  "name": "pulse-server",
  "version": "1.8.0",
  "description": "AI-powered Express.js server with OpenRouter integration",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:ci": "node --experimental-vm-modules node_modules/jest/bin/jest.js --ci --forceExit --runInBand --no-coverage --verbose",
    "commit": "cz",
    "release": "standard-version",
    "release:major": "standard-version --release-as major",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:beta": "standard-version --prerelease beta",
    "prepare": "husky install"
  },
  "config": {
    "commitizen": {
      "path": "./.cz-config.js"
    }
  },
  "keywords": [
    "express",
    "node",
    "server",
    "api",
    "ai",
    "openrouter"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@graphql-tools/schema": "^10.0.27",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.12.0",
    "graphql-request": "^7.3.1",
    "graphql-tag": "^2.12.6",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "babel-jest": "^30.2.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "standard-version": "^9.5.0",
    "supertest": "^6.3.3"
  }
}
